<?xml version="1.0" encoding="utf-8"?>
<resources>
<style name="gameon_background_color"> 
      <item  name="android:background">@color/translucent_red</item>
</style>
<style name="padded_small">
		<item name="android:padding">2px</item>
</style>
<style name="TextAppearance" parent="android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColorLink">#FFEE0000</item>
</style>
 <style name="TextAppearance.Title">
        <item name="android:textStyle">bold</item>
</style>
<style name="TextAppearance.Title.WindowTitle">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
</style>
 <style name="TextAppearance.Button">
        <item name="android:textStyle">bold</item>
 </style>
<style name="TextAppearance.EditText">
        <item name="android:textSize">14sp</item>
 </style>
<style name="continue_button">
		<item name="android:enabled">false</item>
		<item name="android:text">@string/continue_string</item> 
		<item name="android:textStyle">normal</item>
</style>
<style name="cancel_button">
		<item name="android:enabled">true</item>
		<item name="android:text">@string/cancel</item> 
		<item name="android:textStyle">normal</item>
</style>
 <style name="WindowTitleBackground">
        <item name="android:background">@drawable/window_title_background</item>
 </style>
<style name="WindowTitle">
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">@style/TextAppearance.Title.WindowTitle</item>
        <item name="android:shadowColor">#BB000000</item>
        <item name="android:shadowRadius">2.75</item>
</style>
<style name="Widget.Button" parent="android:Widget.Button">
        <item name="android:textAppearance">@style/TextAppearance.Button</item>
        <item name="android:background">@drawable/button_background</item>       
        <item name="android:textColor">#FFFFFFFF</item>
</style>
<style name="Widget.EditText" parent="android:Widget.EditText">
        <item name="android:textAppearance">@style/TextAppearance.EditText</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:gravity">top</item>
 </style>
</resources>
